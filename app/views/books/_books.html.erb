<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% books.each do |book| %>
      <tr id="book_<%= book.id %>"></tr>
      <tr>
        <td>
          <%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'70x70' %>
          <% end %>
        </td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
        <td><%= render 'books/favorite-btn', book: book %></td>
      </tr>
    <% end %>
  </tbody>
</table>