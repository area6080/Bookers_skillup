<div class="container">
  <div class="row mt-3">
    <div class="col-md-6 mt-2 mx-auto">
      <h2>Editing Book</h2>
      <% if @book.errors.any? %>
        <h3><%= @book.errors.count %>error prohibited this obj from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @book,method: :patch do |f| %>
        <p>Title</p>
        <%= f.text_field :title, autofocus: true, class: "form-control" %><br>
        <p>Opinion</p>
        <%= f.text_area :body,class: "form-control" %><br>
        <%= f.submit 'Update Book', class:'btn btn-success' %>
      <% end %>
      
      <%= link_to "Show", book_path(@book.id) %> |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>
